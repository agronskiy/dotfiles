{
    "title": "Caps to Ctrl",
    "rules": [
        {
            "description": "iTerms caps to ctrl",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "i[tT]erm",
                                "VSCode"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "from": {
                        "key_code": "right_command"
                    },
                    "to": [
                        {
                            "key_code": "left_control",
                            "repeat": true
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
